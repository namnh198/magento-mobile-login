<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="customer_edit">
                <action method="setTemplate" ifconfig="mobile_login/general/enable">
                    <argument name="template" xsi:type="string">CodeLands_MobileLogin::form/edit.phtml</argument>
                </action>
                <arguments>
                    <argument name="view_model" xsi:type="object">CodeLands\MobileLogin\ViewModel\EditAccount</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
