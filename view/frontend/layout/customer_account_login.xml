<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_form_login">
            <action method="setTemplate" ifconfig="mobile_login/general/enable">
                <argument name="template" xsi:type="string">CodeLands_MobileLogin::form/login.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">CodeLands\MobileLogin\ViewModel\Login</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
