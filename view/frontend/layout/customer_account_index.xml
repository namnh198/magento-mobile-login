<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="customer_account_dashboard_info">
            <action method="setTemplate" ifconfig="mobile_login/general/enable">
                <argument name="template" xsi:type="string">CodeLands_MobileLogin::account/dashboard/info.phtml</argument>
            </action>
            <arguments>
                <argument name="view_model" xsi:type="object">CodeLands\MobileLogin\ViewModel\EditAccount</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
